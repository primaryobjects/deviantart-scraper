    "version": "0.2.0",
    "configurations": [
        {
            "name": "Download gallery",
            "type": "debugpy",
            "request": "launch",
            "program": "devianart.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Download 3 images from gallery",
            "type": "debugpy",
            "request": "launch",
            "program": "devianart.py",
            "console": "integratedTerminal",
            "args": [
                "--count",
                "3"
            ]
        },
        {
            "name": "Download gallery custom url",
            "type": "debugpy",
            "request": "launch",
            "program": "devianart.py",
            "console": "integratedTerminal",
            "args": [
                "--url",
                "https://www.deviantart.com/topic/photo-manipulation"
            ]
        },
        {
            "name": "Download wallpaper",
            "type": "debugpy",
            "request": "launch",
            "program": "devianart.py",
            "console": "integratedTerminal",
            "args": [
                "-f",
                "wallpaper",
                "-c",
                "1",
                "-r",
                "-u",
                "https://www.deviantart.com/topic/stock-images"
            ]
        },
        {
            "name": "Download 1 random",
            "type": "debugpy",
            "request": "launch",
            "program": "devianart.py",
            "console": "integratedTerminal",
            "args": [
                "--count",
                "1",
                "--random"
            ]
        }
    ]
}

-c 1 -r